@model Streameo.Models.RegisterModel

@{
    ViewBag.Title = "Rejestracja";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    <div id="login-contener">
    <h2>Rejestracja</h2>
        <p id="login-info">Użyj poniższego formularza do utworzenia nowego konta. Nowe hasło powinno mieć więcej niż @Membership.MinRequiredPasswordLength znaków.</p>
		<p>@Html.LabelFor(m => m.Email)</p>
		@Html.TextBoxFor(m => m.Email, new { @class = "text" })
        @if (!ViewData.ModelState.IsValid && ViewData.ModelState["Email"].Errors.Count() > 0)
        {
            <div class="error-msg">
                <p><img src="@Url.Content("~/Content/images/msg-error.png")" border="0" align="absmiddle" alt="" />
                    @ViewData.ModelState["Email"].Errors.First().ErrorMessage <br />
                </p>
            </div>
        }
		<p>@Html.LabelFor(m => m.Password)</p>
		@Html.PasswordFor(m => m.Password, new { @class = "text" })
        @if (!ViewData.ModelState.IsValid && ViewData.ModelState["Password"].Errors.Count() > 0)
        {
            <div class="error-msg">
                <p><img src="@Url.Content("~/Content/images/msg-error.png")" border="0" align="absmiddle" alt="" />
                    @ViewData.ModelState["Password"].Errors.First().ErrorMessage <br />
                </p>
            </div>
        }
		@Html.LabelFor(m => m.ConfirmPassword)
		@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "text" })
        @if (!ViewData.ModelState.IsValid && ViewData.ModelState["ConfirmPassword"].Errors.Count() > 0)
        {
            <div class="error-msg">
                <p><img src="@Url.Content("~/Content/images/msg-error.png")" border="0" align="absmiddle" alt="" />
                    @ViewData.ModelState["ConfirmPassword"].Errors.First().ErrorMessage <br />
                </p>
            </div>
        }
		<input type="submit" value="Zarejestruj się" id="submit" class="text" />
	</div>
}
