@model Streameo.Models.LogOnModel

@{
    ViewBag.Title = "Logowanie";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    <div id="login-contener">
		<h2>Logowanie</h2>
		<p>@Html.LabelFor(m => m.UserName)</p>
		@Html.TextBoxFor(m => m.UserName, new { @class = "text" })
        @if (!ViewData.ModelState.IsValid && ViewData.ModelState["UserName"].Errors.Count() > 0)
        {
            <div class="error-msg">
                <p><img src="@Url.Content("~/Content/images/msg-error.png")" border="0" align="absmiddle" alt="" />
                    @ViewData.ModelState["UserName"].Errors.First().ErrorMessage <br />
                </p>
            </div>
        }    
		<p>@Html.LabelFor(m => m.Password)</p>
		@Html.PasswordFor(m => m.Password, new { @class = "text" }) 
        @if (!ViewData.ModelState.IsValid && ViewData.ModelState["Password"].Errors.Count() > 0)
        {
            <div class="error-msg">
                <p><img src="@Url.Content("~/Content/images/msg-error.png")" border="0" align="absmiddle" alt="" />
                    @ViewData.ModelState["Password"].Errors.First().ErrorMessage <br />
                </p>
            </div>
        }    
		<p id="remember-me">@Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)</p>
		<input type="submit" value="Zaloguj się" id="submit" class="text" />
		<p id="register-if-havent">@Html.ActionLink("Zarejestruj się", "Register", null, new { @class = "ajax" }) jeśli nie posiadasz konta.</p>
	</div>
}
