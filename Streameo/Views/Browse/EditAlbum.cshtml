@model Streameo.Models.AlbumViewModel

@{
    ViewBag.Title = "Edycja " + @Model.Album.Name;
}

<h2>Edycja - @Model.Album.Name</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="../../Scripts/UploadFileExtensionCheck.js" type="text/javascript"></script>

@using (Html.BeginForm("EditAlbum", "Browse", FormMethod.Post, new { enctype = "multipart/form-data" })) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Album</legend>
        
        @Html.HiddenFor(model => model.Album.Id)

        <div class="editor-label">
            @Html.Label("Nazwa")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Album.Name)
            @Html.ValidationMessageFor(model => model.Album.Name)
        </div>

        <div class="editor-label">
            @Html.Label("Artysta")
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.SelectedArtistId, Model.Artists)
        </div>

        <div class="editor-label">
            @Html.Label("Okładka")
        </div>
        <img src="@Model.Album.Cover" width="300" />
        <br />
        <input id="file" type="file" name="file" onchange="check_file('jpg,jpeg,png')" />

        <p>
            <input type="submit" value="Zapisz" />
        </p>
    </fieldset>
}
