@model List<Streameo.Models.Song>
@{
    if (Model.Count > 0)
    {
        ViewBag.Title = Model[0].Artist.Name;
    }
}

<h2>
    @Html.DisplayFor(modelItem => Model[0].Artist.Name)
</h2>

<br />
<img src="@Model[0].Artist.Picture" width="300" />

<br />
<br />

<table>
    <tr>
        <th>
            Albumy
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Album.Name, "Album", new { artistId = item.Artist.Id, albumId = item.Album.Id })
            </td>
        </tr>
    }
</table>