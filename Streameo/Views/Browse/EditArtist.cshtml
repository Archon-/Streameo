@model Streameo.Models.Artist

@{
    ViewBag.Title = "Edycja " + @Model.Name;
}

<h2>Edycja - @Model.Name</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="../../Scripts/UploadFileExtensionCheck.js" type="text/javascript"></script>

@using (Html.BeginForm("EditArtist", "Browse", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Artysta</legend>
        
        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.Label("Nazwa")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.Label("Obrazek")
        </div>
        <img src="@Model.Picture" width="300" />
        <br />
        <input id="file" type="file" name="file" onchange="check_file('jpg,jpeg,png')" />

        <div class="editor-label">
            @Html.Label("Pozycja")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Position)
            @Html.ValidationMessageFor(model => model.Position)
        </div>

        <p>
            <input type="submit" value="Zapisz" />
        </p>
    </fieldset>
}
