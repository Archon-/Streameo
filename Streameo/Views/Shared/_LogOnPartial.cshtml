@if(Request.IsAuthenticated) {
    <text>Zalogowany jako: <strong>@User.Identity.Name</strong>!
    [ @Html.ActionLink("Wyloguj", "LogOff", "Account") ] | [ @Ajax.ActionLink("Mój profil", "MyProfile", "Account", new AjaxOptions()
                       {
                           InsertionMode = InsertionMode.Replace,
                           UpdateTargetId = "main",
                           HttpMethod = "GET"
                       }) ]
    @if (User.IsInRole("Admin"))
    { 
        <text>
        | [ @Ajax.ActionLink("Panel admina", "Index", "Admin", new AjaxOptions()
                       {
                           InsertionMode = InsertionMode.Replace,
                           UpdateTargetId = "main",
                           HttpMethod = "GET"
                       }) ]
        </text>
    }
     
    
    </text>
   
}
else
{
    @:[ @Ajax.ActionLink("Rejestracja", "Register", "Account", new AjaxOptions()
                       {
                           InsertionMode = InsertionMode.Replace,
                           UpdateTargetId = "main",
                           HttpMethod = "GET"
                       }) ]
    @:[ @Ajax.ActionLink("Zaloguj", "LogOn", "Account", new AjaxOptions()
                       {
                           InsertionMode = InsertionMode.Replace,
                           UpdateTargetId = "main",
                           HttpMethod = "GET"
                       }) ]
    
    @:[ @Html.ActionLink("Zaloguj przez Facebooka", "Facebook", "Account") ]
}
