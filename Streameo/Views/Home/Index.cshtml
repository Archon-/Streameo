@model Streameo.Models.Top
@{
    ViewBag.Title = "Streameo";
}
<div id="Toplists">
    <div id="topSongs">
        <h2 class="topTitle">
            Top songs</h2>
        <ul>
            @foreach (var song in Model.Songs)
            {
                <li>
                <a href="#" onclick="LoadMusicFile(@song.Id,true)">@song.Title by @song.Artist</a>
                <a href="#" onclick="AddToPlaylist(@song.Id)">+</a>
                </li>
            }
        </ul>
    </div>
    <div id="topAlbums">
        <h2 class="topTitle">
            Top albums</h2>
        <ul>
            @foreach (var album in Model.Albums)
            {
                <li>@Html.ActionLink(@album.Album, "Album", "Browse", new { artist = @album.Artist, album = @album.Album }, null)
                    by
                    @Html.ActionLink(@album.Artist, "Artist", "Browse", new { artist = @album.Artist }, null)
                </li>
            }
        </ul>
    </div>
    <div id="topArtists">
        <h2 class="topTitle">
            Top artists</h2>
        <ul>
            @foreach (var artist in Model.Artists)
            {
                <li>@Html.ActionLink(@artist.Artist, "Artist", "Browse", new { artist = @artist.Artist }, null)</li>
            }
        </ul>
    </div>
</div>
